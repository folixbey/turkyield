local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Pencere ve Butonlar (Aynı Kalır)

-- Uç Butonu İşlevi
flyButton.MouseButton1Click:Connect(function()
    ReplicatedStorage.FlyMode = true
    LocalPlayer.Character.HumanoidRootPart.CanCollide = false
    LocalPlayer.Character.HumanoidRootPart.Massless = true
end)

-- İn Butonu İşlevi
unflyButton.MouseButton1Click:Connect(function()
    ReplicatedStorage.FlyMode = false
    LocalPlayer.Character.HumanoidRootPart.CanCollide = true
    LocalPlayer.Character.HumanoidRootPart.Massless = false
end)

-- Uçuş Modu Kontrolü
while true do
    if ReplicatedStorage.FlyMode then
        local character = LocalPlayer.Character
        local humanoidRootPart = character.HumanoidRootPart

        humanoidRootPart.Velocity = humanoidRootPart.Velocity + Vector3.new(0, 0, 20)

        -- Yükseklik Sınırlaması Yok
    end

    wait(0.1)
end
