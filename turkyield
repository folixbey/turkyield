local player = game.Players.LocalPlayer

-- GUI Oluşturma
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
local korbloxButton = Instance.new("TextButton", screenGui)

-- Korblox Bacağı Butonu
korbloxButton.Size = UDim2.new(0, 200, 0, 50)
korbloxButton.Position = UDim2.new(0, 10, 0, 10)
korbloxButton.Text = "Korblox Ayağı"
korbloxButton.Draggable = true

-- Korblox Bacağı ID'si
local korbloxLegId = 139607718

-- Korblox Bacağını Ekleme Fonksiyonu
local function addKorbloxLeg()
    local character = player.Character or player.CharacterAdded:Wait()
    
    -- Eski bacağı silme
    local oldLeg = character:FindFirstChild("Left Leg") or character:FindFirstChild("LeftLeg")
    if oldLeg then
        oldLeg:Destroy()
    end
    
    -- Korblox bacağı ekleme
    local korbloxLeg = Instance.new("Part")
    korbloxLeg.Name = "Left Leg"
    korbloxLeg.Size = Vector3.new(1, 2, 1)
    korbloxLeg.Anchored = false
    korbloxLeg.CanCollide = false
    korbloxLeg.Massless = true
    korbloxLeg.Parent = character

    -- Mesh ekleme
    local mesh = Instance.new("SpecialMesh", korbloxLeg)
    mesh.MeshId = "http://www.roblox.com/asset/?id=" .. korbloxLegId
    mesh.TextureId = "http://www.roblox.com/asset/?id=139607721" -- Korblox bacağının texture ID'si
    mesh.Scale = Vector3.new(1, 1, 1)

    -- Motor6D ekleme
    local motor = Instance.new("Motor6D")
    motor.Part0 = character:WaitForChild("HumanoidRootPart")
    motor.Part1 = korbloxLeg
    motor.Parent = korbloxLeg

    -- Humanoid bacağı güncelleme
    local humanoid = character:WaitForChild("Humanoid")
    humanoid.HipHeight = humanoid.HipHeight + (korbloxLeg.Size.Y / 2)
end

-- Buton İşlevi
korbloxButton.MouseButton1Click:Connect(addKorbloxLeg)
