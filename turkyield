local player = game.Players.LocalPlayer

-- GUI Oluşturma
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
local toggleButton = Instance.new("TextButton", screenGui)

-- Menü Toggle Butonu
toggleButton.Size = UDim2.new(0, 100, 0, 50)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.Text = "Tools"
toggleButton.Draggable = true

-- Tools Verme Fonksiyonu
local function giveGlideTool()
    local tool = Instance.new("Tool")
    tool.Name = "Glide"
    tool.RequiresHandle = false

    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(1, 1, 1)
    handle.Transparency = 1
    handle.CanCollide = false
    handle.Parent = tool

    tool.Parent = player.Backpack

    tool.Equipped:Connect(function()
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoid = character:WaitForChild("Humanoid")

        -- Animasyon Oluşturma
        local animation = Instance.new("Animation")
        animation.AnimationId = "rbxassetid://5319927054" -- Buraya animasyon ID'sini ekleyin
        local animationTrack = humanoid:LoadAnimation(animation)

        -- Animasyonu Oynat
        animationTrack:Play()

        -- Glide Devredeyken
        tool.Unequipped:Connect(function()
            animationTrack:Stop()
        end)
    end)
end

-- Buton İşlevi
toggleButton.MouseButton1Click:Connect(giveGlideTool)
