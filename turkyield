local player = game.Players.LocalPlayer
local flying = false

-- GUI Oluşturma
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
local frame = Instance.new("Frame", screenGui)
local flyButton = Instance.new("TextButton", frame)
local unflyButton = Instance.new("TextButton", frame)
local toggleButton = Instance.new("TextButton", screenGui)

-- Frame Özellikleri
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0.5, -100, 0.5, -50)
frame.Visible = false

-- Fly Butonu Özellikleri
flyButton.Size = UDim2.new(0, 180, 0, 40)
flyButton.Position = UDim2.new(0, 10, 0, 10)
flyButton.Text = "Fly"

-- Unfly Butonu Özellikleri
unflyButton.Size = UDim2.new(0, 180, 0, 40)
unflyButton.Position = UDim2.new(0, 10, 0, 50)
unflyButton.Text = "Unfly"

-- Menü Toggle Butonu
toggleButton.Size = UDim2.new(0, 100, 0, 50)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.Text = "Menu"
toggleButton.Draggable = true

-- Uçma Fonksiyonu
local function fly()
    if flying then return end
    flying = true
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    humanoid.PlatformStand = true
    while flying do
        character.HumanoidRootPart.Velocity = Vector3.new(0, 50, 0)
        wait(0.1)
    end
end

-- İniş Fonksiyonu
local function unfly()
    if not flying then return end
    flying = false
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    humanoid.PlatformStand = false
end

-- Buton İşlevleri
flyButton.MouseButton1Click:Connect(fly)
unflyButton.MouseButton1Click:Connect(unfly)
toggleButton.MouseButton1Click:Connect(function()
    frame.Visible = not frame.Visible
end)
