-- Tool'u oluşturma ve oyuncunun envanterine ekleme
local Tool = Instance.new("Tool")
Tool.Name = "sikici"
Tool.RequiresHandle = false
Tool.Parent = game.Players.LocalPlayer.Backpack

-- Tool'a tıklandığında çalışacak kod
Tool.Activated:Connect(function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if not character then return end

    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    -- Mevcut konumları kaydet
    local originalPosition = humanoidRootPart.CFrame
    local camera = game.Workspace.CurrentCamera
    local originalCameraCFrame = camera.CFrame

    -- Mouse'un tıkladığı yere teleport etme
    local mouse = player:GetMouse()
    local targetPosition = mouse.Hit.p
    humanoidRootPart.CFrame = CFrame.new(targetPosition)

    -- 1 saniye sonra karakteri eski konumuna geri getirme
    wait(0.4)
    humanoidRootPart.CFrame = originalPosition

    -- Kamerayı eski konumuna geri döndür
    camera.CFrame = originalCameraCFrame
end)
