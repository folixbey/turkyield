local player = game.Players.LocalPlayer

-- GUI Oluşturma
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
local toggleButton = Instance.new("TextButton", screenGui)

-- Menü Toggle Butonu
toggleButton.Size = UDim2.new(0, 100, 0, 50)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.Text = "Tools"
toggleButton.Draggable = true

-- Tools Verme Fonksiyonu
local function giveTool()
    local tool = Instance.new("Tool")
    tool.RequiresHandle = false
    tool.Name = "TeleportTool"

    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(1, 1, 1)
    handle.Transparency = 1
    handle.CanCollide = false
    handle.Parent = tool

    tool.Parent = player.Backpack

    tool.Activated:Connect(function()
        local mouse = player:GetMouse()
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

        -- Görünmezlik
        for _, part in pairs(character:GetChildren()) do
            if part:IsA("BasePart") then
                part.Transparency = 1
                part.CanCollide = false
            elseif part:IsA("Accessory") then
                part.Handle.Transparency = 1
            end
        end
        humanoidRootPart.Anchored = true

        -- Işınlanma
        local targetPosition = mouse.Hit.p
        humanoidRootPart.CFrame = CFrame.new(targetPosition)

        -- Jumpscare Efekti
        local camera = workspace.CurrentCamera
        local originalCameraCFrame = camera.CFrame
        camera.CameraType = Enum.CameraType.Scriptable
        camera.CFrame = CFrame.new(targetPosition + Vector3.new(0, 5, -10), targetPosition)

        -- 1 saniye sonra tekrar görünür olma
        wait(1)
        for _, part in pairs(character:GetChildren()) do
            if part:IsA("BasePart") then
                part.Transparency = 0
                part.CanCollide = true
            elseif part:IsA("Accessory") then
                part.Handle.Transparency = 0
            end
        end
        humanoidRootPart.Anchored = false

        -- Kamerayı eski yerine döndür
        camera.CameraType = Enum.CameraType.Custom
        camera.CFrame = originalCameraCFrame
    end)
end

-- Buton İşlevi
toggleButton.MouseButton1Click:Connect(giveTool)
