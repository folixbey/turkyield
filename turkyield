-- List of owners
local owners = {}

-- Function to check if a player is an owner
local function isOwner(playerName)
    for _, owner in ipairs(owners) do
        if owner == playerName then
            return true
        end
    end
    return false
end

-- Function to add an owner
local function addOwner(playerName)
    if not isOwner(playerName) then
        table.insert(owners, playerName)
        print(playerName .. " has been added as an owner.")
    end
end

-- Function to summon a player to the command user's location
local function summonPlayer(playerName, commandUser)
    local playerToSummon = game.Players:FindFirstChild(playerName)
    if playerToSummon and playerToSummon.Character and commandUser.Character then
        local destination = commandUser.Character.HumanoidRootPart.CFrame
        playerToSummon.Character:SetPrimaryPartCFrame(destination)
        print(playerName .. " has been summoned to " .. commandUser.Name)
    end
end

-- Listen to the chat for commands
game.Players.PlayerAdded:Connect(function(player)
    player.Chatted:Connect(function(message)
        local args = message:split(" ")
        local command = args[1]

        if command == ".addowner" then
            local playerName = args[2]
            if playerName then
                addOwner(playerName)
            end
        elseif command == ".summon" then
            local playerName = args[2]
            if playerName and isOwner(player.Name) then
                summonPlayer(playerName, player)
            end
        end
    end)
end)
