local player = game.Players.LocalPlayer

-- GUI Oluşturma
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
local walkAnimationButton = Instance.new("TextButton", screenGui)

-- Walk Animation Butonu
walkAnimationButton.Size = UDim2.new(0, 200, 0, 50)
walkAnimationButton.Position = UDim2.new(0, 10, 0, 10)
walkAnimationButton.Text = "Change Walk Animation"
walkAnimationButton.Draggable = true

-- Walk Animation ID
local newWalkAnimationId = "rbxassetid://5319927054"

-- Yürüme Animasyonunu Değiştirme Fonksiyonu
local function changeWalkAnimation()
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    local animateScript = character:FindFirstChild("Animate")

    if animateScript then
        -- Yürüme animasyonunu değiştir
        local walkAnim = animateScript:FindFirstChild("walk")
        if walkAnim then
            local walkAnimTrack = walkAnim:FindFirstChild("WalkAnim")
            if walkAnimTrack then
                walkAnimTrack.AnimationId = newWalkAnimationId
            end
        end
    end
end

-- Buton İşlevi
walkAnimationButton.MouseButton1Click:Connect(changeWalkAnimation)
